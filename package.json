{
  "name": "docker-node-mongo-typescript",
  "version": "1.0.0",
  "description": "Use MongoDB with Docker to create Node service with TypeScript",
  "main": "src/server.ts",
  "scripts": {
    "start": "npm run dev:live",
    "dev:live": "nodemon --watch 'src/**/*.ts' --exec \"ts-node\" src/server.ts",
    "build": "rimraf ./dist && tsc && npm run copy",
    "debug": "tsc -p . && npm run copy",
    "copy": "ts-node copy.ts"
  },
  "keywords": [
    "docker",
    "node",
    "express",
    "mogodb",
    "typescript"
  ],
  "author": "harry huang",
  "license": "ISC",
  "dependencies": {
    "ejs": "^2.6.1",
    "express": "^4.16.3",
    "mongoose": "^5.2.7"
  },
  "devDependencies": {
    "@types/express": "^4.17.8",
    "@types/mongoose": "^5.7.36",
    "@types/node": "^14.6.4",
    "@types/shelljs": "^0.8.8",
    "nodemon": "^2.0.4",
    "rimraf": "^3.0.2",
    "shelljs": "^0.8.4",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2"
  }
}
